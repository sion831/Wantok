extends _bootstrap

append styles
    // Custom styles for this template
    link(href='../css/navbar-static-top.css', rel='stylesheet')
block  body
    .container
        // Main component for a primary marketing message or call to action
        .jumbotron
            h1 QR Code generator demo library (JavaScript)
            form(action='#', method='get', onsubmit='return false;')
                table.noborder(style='width:100%')
                    tbody
                        tr
                            td
                                strong Text string:
                            td(style='width:100%')
                                textarea#text-input(placeholder='Enter your text to be put into the QR Code', style='width:100%; max-width:30em; height:5em; font-family:inherit', oninput='redrawQrCode();')
                        tr
                            td
                                strong QR Code:
                            td
                                canvas#qrcode-canvas(style='padding:1em; background-color:#E8E8E8')
                                svg#qrcode-svg(style='width:30em; height:30em; padding:1em; background-color:#E8E8E8')
                                    rect(width='100%', height='100%', fill='#FFFFFF', stroke-width='0')
                                    path(d='', fill='#000000', stroke-width='0')
                        tr
                            td
                                strong Error correction:
                            td
                                input#errcorlvl-low(type='radio', name='errcorlvl', onchange='redrawQrCode();', checked='checked')
                                label(for='errcorlvl-low') Low
                                input#errcorlvl-medium(type='radio', name='errcorlvl', onchange='redrawQrCode();')
                                label(for='errcorlvl-medium') Medium
                                input#errcorlvl-quartile(type='radio', name='errcorlvl', onchange='redrawQrCode();')
                                label(for='errcorlvl-quartile') Quartile
                                input#errcorlvl-high(type='radio', name='errcorlvl', onchange='redrawQrCode();')
                                label(for='errcorlvl-high') High
                        tr
                            td Output format:
                            td
                                input#output-format-bitmap(type='radio', name='output-format', onchange='redrawQrCode();', checked='checked')
                                label(for='output-format-bitmap') Bitmap
                                input#output-format-vector(type='radio', name='output-format', onchange='redrawQrCode();')
                                label(for='output-format-vector') Vector
                        tr
                            td Border:
                            td
                                input#border-input(type='number', value='4', min='0', max='100', step='1', style='width:4em', oninput='redrawQrCode();')
                                |  modules
                        tr#scale-row
                            td Scale:
                            td
                                input#scale-input(type='number', value='8', min='1', max='30', step='1', style='width:4em', oninput='redrawQrCode();')
                                |  pixels per module
                        tr
                            td Version range:
                            td
                                | Minimum =
                                input#version-min-input(type='number', value='1', min='1', max='40', step='1', style='width:4em', oninput="handleVersionMinMax('min');")
                                | , maximum =
                                input#version-max-input(type='number', value='40', min='1', max='40', step='1', style='width:4em', oninput="handleVersionMinMax('max');")
                        tr
                            td Mask pattern:
                            td
                                input#mask-input(type='number', value='-1', min='-1', max='7', step='1', style='width:4em', oninput='redrawQrCode();')
                                |  (−1 for automatic, 0 to 7 for manual)
                        tr
                            td Boost ECC:
                            td
                                input#boost-ecc-input(type='checkbox', checked='checked', onchange='redrawQrCode();')
                                label(for='boost-ecc-input')
                                    | Increase
                                    abbr(title='error-correcting code') ECC
                                    |  level within same version
                        tr
                            td Statistics:
                            td#statistics-output(style='white-space:pre')
                        tr#svg-xml-row
                            td SVG XML code:
                            td
                                textarea#svg-xml-output(readonly='readonly', style='width:100%; max-width:50em; height:15em; font-family:monospace')
            script(type='application/javascript', src='javascripts/qrcodegen.js')
            script(type='application/javascript', src='javascripts/qrcodegen-demo.js')
            hr
            p
                | Copyright © Project Nayuki –
                a(href='https://www.nayuki.io/page/qr-code-generator-library') https://www.nayuki.io/page/qr-code-generator-library
